{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "sourceMap": false
  },
  "allowJs": true,
  "esModuleInterop": true,
  "skipLibCheck": true,
  "forceConsistentCasingInFileNames": true,
  "moduleResolution": "node",
  "resolveJsonModule": true,
  "isolatedModules": true,
  "allowSyntheticDefaultImports": true,
  "strict": true,
  "exclude": [
    "node_modules"
  ]
}
